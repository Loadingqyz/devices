
@{
    ViewData["Title"] = "设备列表";
}

    <div class="text-center">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h5">设备列表</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <button id="NewEquipment" type="button" class="btn btn-sm btn-outline-secondary">新增</button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>资产编号</th>
                        <th>设备名称</th>
                        <th>报废日期</th>
                        <th>维护人员</th>
                        <th>维护时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipment in ViewBag.Equipment.EquipmentList)
                    {
                        <tr id="equipment_@(equipment.Id)_tr">
                            <td>@equipment.FixedAssetId</td>
                            <td>@equipment.EquipmentName</td>
                            <td>@equipment.ScrapDateStr</td>
                            <td>@equipment.LastMaintenanceNames</td>
                            <td>@equipment.LastMaintenanceTimeStr</td>
                            <td  eid="@equipment.Id"><a target="_blank" href="/Equipment/RunQRCode?eid=@equipment.Id">二维码</a> <a href="/Equipment/Update?eid=@equipment.Id">修改</a> <a class="equipment_delete"  href="javascript:void(0);">删除</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div style="float:right;">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (ViewBag.Equipment.PageIndex != 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Equipment/List?page=@(ViewBag.Equipment.PageIndex-1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= ViewBag.Equipment.TotalPage; i++)
                    {
                        @if (i == ViewBag.Equipment.PageIndex)
                        {
                            <li class="page-item"><a class="page-link" style="font-weight: bold;" href="/Equipment/List?page=@i">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="/Equipment/List?page=@i">@i</a></li>
                        }
                    }
                    @if (ViewBag.Equipment.PageIndex != ViewBag.Equipment.TotalPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Equipment/List?page=@(ViewBag.Equipment.PageIndex+1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
<script>
    $(function () {
        $("#EquipmentList").addClass("active");
        $("#NewEquipment").click(function () {
            location.href = "/Equipment/Add";
        });
        $(".equipment_delete").click(function () {
            var eid = $(this).parent().attr("eid")
            if (confirm("确认是否删除？")) {
                $.ajax({
                    type: "POST",
                    url: "/Equipment/RunDelete",
                    data: {
                        "eid": eid
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert("Something went wrong!");
                    },
                    success: function (result) {
                        if (result != null && result == "1") {
                            alert("删除成功");
                            $("#equipment_" + eid + "_tr").remove();
                        } else {
                            alert("系统异常,code="+result);
                        }
                        
                    }
                });
            }
        });
    });
</script>